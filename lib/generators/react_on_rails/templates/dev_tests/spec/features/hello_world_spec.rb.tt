# frozen_string_literal: true

require_relative "../rails_helper"

feature "<%= example_page_title %>", js: true do
  scenario "the example page works" do
    visit "/<%= example_page_path %>"
    expect(heading).to have_text("<%= example_page_title %>")
    expect(message).to have_text("Stranger")
    name_input.set("John Doe")
    expect(message).to have_text("John Doe")
  end
end

private

def name_input
  page.first("input")
end

def message
  page.first(:css, "h3")
end

def heading
  page.first(:css, "h1")
end
